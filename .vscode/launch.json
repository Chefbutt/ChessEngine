    "version": "0.2.0",
    "configurations": [
        {
            "name": "Engine vs Engine",
            "type": "go",
            "request": "launch",
            "program": "./main.go",
            "args": ["engine-vs-engine", "debug"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Engine vs Human",
            "type": "go",
            "request": "launch",
            "program": "./main.go",
            "args": ["engine-vs-human", "debug"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Engine vs Engine Sans Output",
            "type": "go",
            "request": "launch",
            "program": "./main.go",
            "args": ["engine-vs-engine", "no-debug"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Evaluate Output",
            "type": "go",
            "request": "launch",
            "program": "./main.go",
            "args": ["evaluate", "debug", "r4r1k/1R1R2p1/7p/8/8/3Q1Ppq/P7/6K1 b - - 0 1"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
